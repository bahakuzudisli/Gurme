    <style name="CustomButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="android:colorControlHighlight">#C8C8C8</item>
        <item name= "android:height">50dp</item>
        <item name= "android:width">50dp</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

