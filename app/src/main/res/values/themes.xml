<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gurme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blackTone</item>

    </style>

    <style name="Theme.Gurme" parent="Base.Theme.Gurme">
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="MyToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/baloo_da</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Outlined Button Style-->
    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:padding">12dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>
    <!-- Filled Button Style-->
    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="android:padding">12dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

